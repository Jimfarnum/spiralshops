{
  "info": {
    "name": "SPIRAL Core APIs",
    "description": "Comprehensive test suite for SPIRAL platform core functionality",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health & System",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_base}}/check",
              "host": ["{{api_base}}"],
              "path": ["check"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is healthy', () => {",
                  "  pm.response.to.have.status(200);",
                  "  const response = pm.response.json();",
                  "  pm.expect(response.status).to.equal('healthy');",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Investor Portal",
      "item": [
        {
          "name": "Get Investor Metrics (Authenticated)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_base}}/investors/metrics?investor_token={{investor_token}}",
              "host": ["{{api_base}}"],
              "path": ["investors", "metrics"],
              "query": [
                {
                  "key": "investor_token",
                  "value": "{{investor_token}}"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Investor metrics returned', () => {",
                  "  pm.response.to.have.status(200);",
                  "  const response = pm.response.json();",
                  "  pm.expect(response).to.have.property('kpis');",
                  "  pm.expect(response).to.have.property('platform');",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Products & Inventory",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_base}}/products",
              "host": ["{{api_base}}"],
              "path": ["products"]
            }
          }
        },
        {
          "name": "Get Featured Products",
          "request": {
            "method": "GET", 
            "header": [],
            "url": {
              "raw": "{{api_base}}/products/featured",
              "host": ["{{api_base}}"],
              "path": ["products", "featured"]
            }
          }
        }
      ]
    },
    {
      "name": "Stores & Location",
      "item": [
        {
          "name": "Get All Stores",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_base}}/stores",
              "host": ["{{api_base}}"],
              "path": ["stores"]
            }
          }
        },
        {
          "name": "Continental US Store Search", 
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_base}}/location-search-continental-us?scope=all",
              "host": ["{{api_base}}"],
              "path": ["location-search-continental-us"],
              "query": [
                {
                  "key": "scope", 
                  "value": "all"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "AI Agents & SOAP G",
      "item": [
        {
          "name": "Get AI Recommendations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_base}}/recommend",
              "host": ["{{api_base}}"],
              "path": ["recommend"]
            }
          }
        }
      ]
    }
  ]
}