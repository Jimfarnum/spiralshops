{
  "extends": "./tsconfig.server.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,
    "noEmit": false,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/tsc/production.tsbuildinfo.json",
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": [
    "server/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "client/**/*",
    "dist/**/*",
    "**/*.test.ts",
    "**/test/**",
    "**/*.spec.ts",
    "**/coverage/**",
    "**/tmp/**",
    "**/*.d.ts"
  ]
}