{
  "version": 2,
  "builds": [
    { "src": "server/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/(api|healthz)(/.*)?$", "dest": "server/index.js" },
    { "src": "^/static/(.*)$", "dest": "/dist/$1" },
    { "src": "^/avatars/(.*)$", "dest": "/public/avatars/$1" },
    { "src": "^(?!/(api|healthz|static|avatars)/).*", "status": 404 }
  ]
}